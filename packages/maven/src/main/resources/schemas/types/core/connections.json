{
  "$id": "/core/connections",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "endpoint": {
      "type": "object",
      "required": [
        "blockId",
        "resourceName"
      ],
      "properties": {
        "blockId": {
          "type": "string"
        },
        "resourceName": {
          "type": "string"
        }
      }
    },
    "ToEndpoint": {
      "type": "object",
      "required": [
        "blockId",
        "resourceName",
        "port"
      ],
      "properties": {
        "blockId": {
          "type": "string"
        },
        "resourceName": {
          "type": "string"
        },
        "port": {
          "$ref": "/core/port"
        }
      }
    }
  },
  "type": "array",
  "items": {
    "type": "object",
    "required": [
      "from",
      "to"
    ],
    "properties": {
      "from": {
        "$ref": "#/definitions/endpoint"
      },
      "to": {
        "$ref": "#/definitions/ToEndpoint"
      },
      "mapping": {
        "type": "object",
        "additionalProperties": true
      }
    }
  }
}