{
  "$id": "/core/asset-reference",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$ref": "#/definitions/AssetReference",
  "definitions": {
    "AssetReference": {
      "type": "object",
      "required": [
        "ref"
      ],
      "properties": {
        "ref": {
          "type": "string",
          "pattern": "^(\\w+://)?[a-z0-9-_]+/[a-z0-9-_]+(:(\\d+\\.\\d+\\.\\d+|local))$"
        }
      }
    }
  }
}