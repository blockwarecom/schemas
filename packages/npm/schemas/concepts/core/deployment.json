{
  "kind": "core/concept",
  "metadata": {
    "name": "core/deployment"
  },
  "spec": {
    "dependencies": [
      {
        "path": "spec.environment.ref",
        "type": "Environment"
      },
      {
        "path": "spec.target.kind",
        "type": "Deployment target"
      },
      {
        "path": "spec.services.name",
        "type": "Services"
      }
    ],
    "schema": {
      "$id": "/core/deployment",
      "$schema": "http://json-schema.org/draft-07/schema#",
      "definitions": {
        "DeploymentArtifact": {
          "type": "object",
          "required": [
            "name",
            "version",
            "type"
          ],
          "properties": {
            "name": {
              "type": "string"
            },
            "version": {
              "type": "string"
            },
            "type": {
              "$ref": "#/definitions/DeploymentArtifactType"
            }
          }
        },
        "DeploymentArtifactType": {
          "type": "string"
        },
        "DeploymentServices": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "name",
              "artifact"
            ],
            "properties": {
              "name": {
                "type": "string",
                "pattern": "^(\\w+://)?[a-z0-9-_]+/[a-z0-9-_]+(:(\\d+\\.\\d+\\.\\d+|local))$"
              },
              "artifact": {
                "$ref": "#/definitions/DeploymentArtifact"
              },
              "dependencies": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "configuration": {
                "type": "object"
              }
            }
          }
        },
        "DeploymentTargetReference": {
          "type": "object",
          "properties": {
            "kind": {
              "type": "string",
              "pattern": "^(\\w+://)?[a-z0-9-_]+/[a-z0-9-_]+(:(\\d+\\.\\d+\\.\\d+|local))$"
            }
          },
          "required": [
            "kind"
          ]
        }
      },
      "type": "object",
      "required": [
        "kind",
        "metadata",
        "spec"
      ],
      "properties": {
        "kind": {
          "type": "string",
          "const": "core/deployment"
        },
        "metadata": {
          "$ref": "/core/type-metadata"
        },
        "spec": {
          "type": "object",
          "required": [
            "environment",
            "target",
            "services"
          ],
          "properties": {
            "environment": {
              "$ref": "/core/asset-reference"
            },
            "target": {
              "$ref": "#/definitions/DeploymentTargetReference"
            },
            "services": {
              "$ref": "#/definitions/DeploymentServices"
            }
          }
        }
      }
    }
  }
}